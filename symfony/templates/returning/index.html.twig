{% extends 'base.html.twig' %}

{% block title %}Returning index{% endblock %}

{% block body %}
    <h1>Returning index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ReturnDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for returning in returnings %}
            <tr>
                <td>{{ returning.id }}</td>
                <td>{{ returning.returnDate ? returning.returnDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_returning_show', {'id': returning.id}) }}">show</a>
                    <a href="{{ path('app_returning_edit', {'id': returning.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_returning_new') }}">Create new</a>
{% endblock %}
